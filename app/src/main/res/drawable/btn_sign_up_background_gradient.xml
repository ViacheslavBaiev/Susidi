<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#FF6B00"
                android:startColor="#FFC400"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FAF7F2" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>